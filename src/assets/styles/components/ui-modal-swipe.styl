.ui-modal-swipe
	opacity 1

	&__header
		display flex
		align-items center
		justify-content space-between
		height 55px
		padding $padding

	&__close
		padding 0
		text-align left

	&__content
		padding $padding
		width 100%
		height 100%

	& :deep(.modal-background)
		background-color #000000b3 !important
