.ui-contacts
	display flex
	flex-direction column
	width 100%
	min-width 300px
	background-color $color-background-secondary
	border-radius $border-radius

	&__item
		display flex
		justify-content flex-start
		align-items center
		width 100%
		height 55px
		padding $padding
		transition opacity $transition
		cursor pointer

		&:hover
			opacity .7

		&:active
			opacity .5

	&__info
		margin-left $padding
		display flex
		flex-direction column
		justify-content flex-start
		align-items flex-start

	&__contact
		font-size 14px
		color $color-text

	&__name
		font-size 12px
		color $color-text-secondary
